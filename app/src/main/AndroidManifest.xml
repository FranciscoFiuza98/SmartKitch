<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.smartkkitch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".Login"/>
        <activity android:name=".MyIngredientsActivity"
            android:label="Pantry"/>
        <activity android:name=".GeneratedRecipesActivity"
            android:label="Generate"/>
        <activity android:name=".GenerateActivity"
            android:label="Generate"/>
        <activity android:name=".MyRecipesActivity"
            android:label="My Recipes"/>
        <activity android:name=".RecipeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Home"
            android:label="Home"/>
        <activity android:name=".FirstFiveIngredients" />
        <activity android:name=".WelcomeScreen"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Register"
            android:parentActivityName=".Login" />
        <activity android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>